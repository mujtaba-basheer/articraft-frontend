{
  "components": {
    "schemas": {
      "GoogleSignInRequestDto": {
        "properties": {
          "token": {
            "description": "JWT Token",
            "type": "string"
          }
        },
        "required": ["token"],
        "type": "object"
      },
      "ShopifyAuthResponseDto": {
        "properties": {
          "link": {
            "description": "Shopify Auth  URL",
            "type": "string"
          }
        },
        "required": ["link"],
        "type": "object"
      },
      "SignInRequestDto": {
        "properties": {
          "email": {
            "description": "Email",
            "example": "qwerty@example.com",
            "type": "string"
          },
          "password": {
            "description": "Password",
            "type": "string"
          }
        },
        "required": ["email", "password"],
        "type": "object"
      },
      "SignInResponseDto": {
        "properties": {
          "accessToken": {
            "description": "Access token",
            "type": "string"
          },
          "email": {
            "description": "Email",
            "type": "string"
          },
          "emailVerified": {
            "description": "Is email verified?",
            "type": "boolean"
          },
          "firstName": {
            "description": "First name",
            "type": "string"
          },
          "id": {
            "description": "User ID",
            "type": "string"
          },
          "lastName": {
            "description": "Last name",
            "type": "string"
          },
          "metaConnected": {
            "description": "Is Meta account connected?",
            "type": "boolean"
          },
          "shopifyConnected": {
            "description": "Is Shopify account connected?",
            "type": "boolean"
          }
        },
        "required": [
          "id",
          "firstName",
          "lastName",
          "email",
          "emailVerified",
          "shopifyConnected",
          "metaConnected",
          "accessToken"
        ],
        "type": "object"
      },
      "SignupRequestDto": {
        "properties": {
          "email": {
            "description": "Email",
            "example": "qwerty@example.com",
            "type": "string"
          },
          "firstName": {
            "description": "First name",
            "example": "John",
            "type": "string"
          },
          "lastName": {
            "description": "Last name",
            "example": "Doe",
            "type": "string"
          },
          "password": {
            "description": "Password",
            "type": "string"
          },
          "phoneNumber": {
            "description": "Phone number",
            "example": "7686886489",
            "type": "string"
          },
          "phonePrefix": {
            "description": "Phone prefix",
            "example": "+91",
            "type": "string"
          }
        },
        "required": ["firstName", "lastName", "email", "password"],
        "type": "object"
      },
      "SignupResponseDto": {
        "properties": {
          "createdAt": {
            "description": "Created at timestamp",
            "format": "date-time",
            "type": "string"
          },
          "email": {
            "description": "Email",
            "type": "string"
          },
          "emailVerified": {
            "description": "Is email verified?",
            "type": "boolean"
          },
          "firstName": {
            "description": "First name",
            "type": "string"
          },
          "id": {
            "description": "User ID",
            "type": "string"
          },
          "lastName": {
            "description": "Last name",
            "type": "string"
          },
          "metaConnected": {
            "description": "Is Meta account connected?",
            "type": "boolean"
          },
          "phoneNumber": {
            "description": "Phone number",
            "type": "string"
          },
          "phonePrefix": {
            "description": "Phone prefix",
            "type": "string"
          },
          "shopifyConnected": {
            "description": "Is Shopify account connected?",
            "type": "boolean"
          }
        },
        "required": [
          "id",
          "firstName",
          "lastName",
          "email",
          "emailVerified",
          "shopifyConnected",
          "metaConnected",
          "createdAt"
        ],
        "type": "object"
      },
      "VerifyEmailRequestDto": {
        "properties": {
          "email": {
            "description": "Email",
            "example": "qwerty@example.com",
            "type": "string"
          },
          "otp": {
            "description": "OTP received for email verification",
            "type": "string"
          }
        },
        "required": ["email", "otp"],
        "type": "object"
      },
      "VerifyEmailResponseDto": {
        "properties": {
          "email": {
            "description": "Email",
            "example": "qwerty@example.com",
            "type": "string"
          },
          "result": {
            "description": "OTP verification result",
            "type": "boolean"
          }
        },
        "required": ["email", "result"],
        "type": "object"
      }
    },
    "securitySchemes": {
      "bearer": {
        "bearerFormat": "JWT",
        "scheme": "bearer",
        "type": "http"
      }
    }
